<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/striped_background"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Vibrant Header -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"
android:background="@drawable/header_background"
android:padding="20dp"
android:layout_marginBottom="40dp"
android:elevation="10dp"
android:clipToPadding="false">

<ImageView
    android:layout_width="52dp"
    android:layout_height="52dp"
    android:src="@drawable/category_24px"
    android:contentDescription="App Logo"
    android:scaleType="centerInside"
    app:tint="#FFCA28" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mentory"
    android:textSize="34sp"
    android:textStyle="bold"
    android:textColor="@color/white"
android:layout_marginStart="16dp"
android:shadowColor="#4A2C1A"
android:shadowDx="4"
android:shadowDy="4"
android:shadowRadius="8"/>
</LinearLayout>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="¡Bienvenido!"
android:textSize="38sp"
android:textStyle="bold"
android:textColor="#8E24AA"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="48dp"
    android:background="@drawable/title_background"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:elevation="6dp"/>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@drawable/edittext_background"
android:padding="16dp"
android:layout_marginBottom="28dp"
android:elevation="8dp"
android:transitionName="usuario_transition">

<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/person_24px"
    android:layout_gravity="center_vertical"
    app:tint="#F06292" />

<EditText
    android:id="@+id/usuario"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:hint="Usuario"
    android:background="@null"
    android:paddingStart="14dp"
    android:textColor="#4A148C"
android:textColorHint="#F48FB1"
android:textSize="20sp"
android:fontFamily="sans-serif-medium"/>
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@drawable/edittext_background"
android:padding="16dp"
android:layout_marginBottom="40dp"
android:elevation="8dp"
android:transitionName="contra_transition">

<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/password_24px"
    android:tint="#F06292"
android:layout_gravity="center_vertical"
tools:ignore="UseAppTint" />

<EditText
    android:id="@+id/contra"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:hint="Contraseña"
    android:inputType="textPassword"
    android:background="@null"
    android:paddingStart="14dp"
    android:textColor="#4A148C"
android:textColorHint="#F48FB1"
android:textSize="20sp"
android:fontFamily="sans-serif-medium"/>
</LinearLayout>

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Iniciar Sesión"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:drawableStart="@drawable/login_24px"
        android:drawableTint="#FFCA28"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:elevation="10dp"
        app:backgroundTint="@null"
        style="@style/Widget.AppCompat.Button" />

    </LinearLayout>