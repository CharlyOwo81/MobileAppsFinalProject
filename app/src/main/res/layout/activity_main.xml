<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/striped_background"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Cabecera Vibrante -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/header_background"
        android:padding="20dp"
        android:layout_marginBottom="40dp"
        android:elevation="8dp"
        android:clipToPadding="false">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/category_24px"
            android:contentDescription="App Logo"
            android:scaleType="centerInside"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentory"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFEB55"
            android:layout_marginStart="16dp"
            android:shadowColor="#80000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"/>
    </LinearLayout>

    <!-- Título Épico -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#640D5F"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:background="@drawable/title_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:elevation="4dp"/>

    <!-- Campo Usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edittext_background"
        android:padding="14dp"
        android:layout_marginBottom="24dp"
        android:elevation="6dp"
        android:transitionName="usuario_transition">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/person_24px"
            android:layout_gravity="center_vertical"
            app:tint="#D91656" />

        <EditText
            android:id="@+id/usuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Usuario"
            android:background="@null"
            android:paddingStart="12dp"
            android:textColor="#640D5F"
            android:textColorHint="#EE66A6"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Campo Contraseña -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edittext_background"
        android:padding="14dp"
        android:layout_marginBottom="36dp"
        android:elevation="6dp"
        android:transitionName="contra_transition">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/password_24px"
            android:tint="#D91656"
            android:layout_gravity="center_vertical"
            tools:ignore="UseAppTint" />

        <EditText
            android:id="@+id/contra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:background="@null"
            android:paddingStart="12dp"
            android:textColor="#640D5F"
            android:textColorHint="#EE66A6"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Botón Épico -->
    <Button
        android:id="@+id/btnInicio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Iniciar Sesión"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:drawableStart="@drawable/login_24px"
        android:drawableTint="#FFEB55"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="8dp"
        android:transitionName="button_transition"
        android:stateListAnimator="@anim/button_elevation_anim"
        />

</LinearLayout>